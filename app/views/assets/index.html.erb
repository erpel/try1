<% title "Assets" %>


<% form_tag assets_path, :method => 'get' do %>
  <p><%=  label_tag :search, 'Serial number:' %> 
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table id="AssetIndex">
  <tr>
    <th>Kunde</th>
    <th>Serial</th>
    <th>Mla</th>
    <th>Modell</th>
    <th>Delivery Einheit</th>
    <th>Wartungsende</th>
    <th>Standortplz</th>
    <th>Standortort</th>
    <th>Standortstrasse</th>
    <th>Standortkunde Gebaeude</th>
    <th>Kontaktosy Einheit</th>
    <th>Vertragsnummer</th>
    <th>Asset</th>
    <th>Restneu</th>
  </tr>
  <% for asset in @assets %>
    <tr>
      <td><%=h asset.kunde %></td>
      <td><%=h asset.serial %></td>
      <td><%=h asset.mla %></td>
      <td><%=h asset.modell %></td>
      <td><%=h asset.delivery_einheit %></td>
      <td><%=h asset.wartungsende %></td>
      <td><%=h asset.standortPLZ %></td>
      <td><%=h asset.standortOrt %></td>
      <td><%=h asset.standortStrasse %></td>
      <td><%=h asset.standortKunde_gebaeude %></td>
      <td><%=h asset.kontaktOSY_einheit %></td>
      <td><%=h asset.vertragsnummer %></td>
      <td><%=h asset.asset_id %></td>
      <td><%=h asset.restNeu %></td>
      <td><%= link_to "Show", asset %></td>
      <td><%= link_to "Edit", edit_asset_path(asset) %></td>
      <td><%= link_to "Destroy", asset, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<%= will_paginate %> 

<p><%= link_to "New Asset", new_asset_path %></p>
<p><%= link_to "All Assets", all_assets_path %> </p>
<p><%= link_to "Export to CSV", assets_path.to_s+".csv" %> </p> 
<p><%= link_to "Import CSV", :controller => 'import_assets' %> </p> 
