<% form_for @e_mail_text do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :to %><br />
    <%= f.text_field :to %>
  </p>
  <p>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %><br />
  Placeholders available:</p>
  <ul id="" class="">
  <li>_TICKETNR</li>
  <li>_SERIAL</li>
  <li>_SUNID</li>
  <li>_ADDRESS</li>
  <li>_LOCATION</li>
  <li style="color:grey;">_PARTNR</li>
  
  </ul>
  
  <p><%= f.submit "Submit" %></p>
<% end %>
