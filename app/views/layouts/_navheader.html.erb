<div id="navheader" >
	<ul id="sessionbar" class="">
		<% if !current_user %>
			<li id="sessionstatus"> Not logged in.</li>  
			<li><%= link_to "Register", new_account_path %></li> 
			<li><%= link_to "Log In", new_user_session_path %></li>
		<% else %>
			<li id="sessionstatus">Logged in as: <%= current_user.login %> </li> 
			<li><%= link_to "My Account", account_path %></li>
			<li><%= link_to "Logout", user_session_path, :method => :delete, :confirm => "Are you sure you want to logout?" %></li>
		<% end %> 
	</ul> 
	<ul id="navlinks">
		<%= "<li>"+link_to('Tickets', tickets_path)+"</li>" if permitted_to? :index, :tickets%>
		<%= "<li>"+link_to('Assets', assets_path)+"</li>" if permitted_to? :index, :assets%>
		<%= "<li>"+link_to(nil, roles_path)+"</li>" if permitted_to? :index, :roles%>
		<%= "<li>"+link_to("Server", infocollections_path)+"</li>" if permitted_to? :index, :infocollections%>
		<%= "<li>"+link_to("Infos", infobits_path)+"</li>" if permitted_to? :index, :infobits%>
		<%= "<li>#{link_to("Adressen", data_center_addresses_path)}</li>"  if permitted_to? :index, :data_center_addresses%> 
		<%= "<li>#{link_to("Vorlagen", e_mail_texts_path)}</li>" if permitted_to? :index, :e_mail_texts %> 
	</ul></div>